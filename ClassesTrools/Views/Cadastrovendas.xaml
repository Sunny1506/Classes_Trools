<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassesTrools.Views.Cadastrovendas">

    <ScrollView>
        <StackLayout Padding="20" BackgroundColor="#EAEAEA">

            <Image Source="styleroxo.png" HorizontalOptions="Center" HeightRequest="100" Margin="0,10,0,20"/>
            <Label Text="CADASTRO DE VENDAS" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Entry Placeholder="NOME DO CLIENTE / EMPRESA*" Margin="0,0,0,20"/>
            <Entry Placeholder="PRODUTO" Margin="0,0,0,20"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Entry Placeholder="VALOR" Grid.Column="0"/>
                <Entry Placeholder="DESCONTO" Grid.Column="1" Margin="10,0,0,0"/>
            </Grid>

            <Editor Placeholder="OBSERVAÇÃO" HeightRequest="100" Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="CANCELAR" Grid.Column="0" BackgroundColor="#C0C0C0" TextColor="Black"/>
                <Button Text="CONCLUIR" Grid.Column="1" BackgroundColor="Purple" TextColor="White" Margin="10,0,0,0"/>
            </Grid>
            
        </StackLayout>
    </ScrollView>
</ContentPage>