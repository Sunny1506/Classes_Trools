<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassesTrools.Views.Cadastrocortador"
             Shell.NavBarIsVisible ="false">

    <ScrollView>
        <StackLayout Padding="20" BackgroundColor="#D5CCE3">

            <Image Source="styleroxo.png" HorizontalOptions="Center" HeightRequest="200" Margin="0,10,0,20"/>
            <Label Text="CADASTRO DE CORTADOR" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Entry Placeholder="NOME DE CORTADOR" Margin="0,0,0,20" BackgroundColor="#f7faf8"/>
            <Entry Placeholder="TELEFONE" Margin="0,0,0,20" BackgroundColor="#f7faf8"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="CANCELAR" Grid.Column="0" BackgroundColor="#9f58f5" TextColor="Black"/>
                <Button Text="SALVAR PROGUESSO" Grid.Column="1" BackgroundColor="Purple" TextColor="White" Margin="10,0,0,0"/>
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>