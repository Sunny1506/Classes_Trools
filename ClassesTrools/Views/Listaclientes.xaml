<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassesTrools.Views.Listaclientes"
             BackgroundColor="#DAD0E1"
             Shell.NavBarIsVisible ="false">
    <Grid Padding="20">
        <VerticalStackLayout Spacing="20">
            <Button Text="VOLTAR"
                    BackgroundColor="#8A2BE2"
                    TextColor="White"
                    FontAttributes="Bold"
                    HorizontalOptions="Start" />
            <Image Source="stitchtech_logo.png"
                   HorizontalOptions="Center"
                   HeightRequest="50"/>
            <Label Text="CLIENTES"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center"/>
            <HorizontalStackLayout>
                <Entry Placeholder="Digite o nome do cliente que deseja encontrar"
                       HorizontalOptions="FillAndExpand"
                        BackgroundColor="#f7faf8"/>
                <Button Text="🔍"
                        BackgroundColor="#8A2BE2"
                        TextColor="White"/>
                <Button Text="+"
                        BackgroundColor="#8A2BE2"
                        TextColor="White"/>
            </HorizontalStackLayout>
            <ScrollView>
                <VerticalStackLayout Spacing="10">
                    <!-- Repeat this StackLayout for each client -->
                    <StackLayout BackgroundColor="#E6E6FA"
                                 Padding="10"
                                 Orientation="Horizontal"
                                 Spacing="10">
                        <Label Text="000"
                               WidthRequest="50"
                               VerticalOptions="Center"/>
                        <Label Text="NOME DO CLIENTE"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center"/>
                        <Label Text="CNPJ"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center"/>
                        <Label Text="DATA DE CADASTRO"
                               HorizontalOptions ="FillAndExpand"
                               VerticalOptions ="Center"/>
                        <ImageButton Source ="olho.png"
                                     Padding="10"
                                     HeightRequest="20"
                                     WidthRequest="20"
                                     CornerRadius="10"
                                     BackgroundColor="#c37cd6"/>
                        <ImageButton Source ="lapis.png" 
                                     Padding="10"
                                     HeightRequest="20"
                                     WidthRequest="20"
                                     CornerRadius="10"
                                     BackgroundColor ="#c37cd6"/>
                        <ImageButton Source ="lixo.png"
                                     Padding ="10"
                                    HeightRequest="20"
                                     WidthRequest="20"
                                    CornerRadius="10"
                                     BackgroundColor ="#c37cd6"/>
                    </StackLayout>
                    <!-- Repeat ends here -->
                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </Grid>
</ContentPage>